<div class="columns is-centered mt-6">
  <div class="column is-half">
      <div class="box is-fullwidth has-background-info-dark has-text-centered">
        <article class="box">
          <h1 class="title"><b>Highest User Rated Games</b></h1>
        </article>
      </div>
    </div>
  </div>
</div>

<% @highest_rated_games.each do |game, rating| %>
  <div class="highest-rated-box">
    <% if game.medium_image %>
      <%= link_to (image_tag game.medium_image, alt: "boardgame"), boardgame_path(game) %>
    <% end %><br>
    <div class="game-name">
      <%= link_to game.name, boardgame_path(game) %><br>
      Average User Rating: <b><%= rating %></b><br><br><br>
    </div>
  </div>
<% end %>

