<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input" %>
  </div>

  <div class="field">
    <%= f.label "Confirm Password", class: "label" %>
    <%= f.password_field :password_confirmation, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :first_name, class: "label" %>
    <%= f.text_field :first_name, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "label" %>
    <%= f.text_field :last_name, class: "input" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit class: "button is-success is-rounded" %>
  </div>

<% end %>
