<div class="columns is-centered mt-6">
  <div class="column is-half">
      <div class="box is-fullwidth has-background-info-dark has-text-centered">
        <article class="box">
          <h1 class="title">Welcome to your Social Boardgame Experience</h1>
        </article>
      </div>
    </div>
  </div>
</div>

<% if @boardgame %>
  <div class="box">
    <% @boardgame.each do |b| %>
      <div class="search-box">
        <div class="game-name"><%= link_to b.name, boardgame_path(b) %>
          <br>
          <br>
        </div>
        <% if b.small_image %>
          <%= link_to (image_tag b.small_image, alt: "boardgame"), boardgame_path(b) %><br>
        <% end %>
        <% if !b.categories.empty? %>
          <b>Category:</b><% b.categories.each do |e| %>
            <% if b.categories.count > 1 %>
              |
            <% end %>
            <%= link_to e.name, category_path(e) %>
          <% end %>
        <% end %>
        <br>
        <%== b.description.first(300) ...%>
        <%  %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="columns is-centered mt-6">
  <div class="column is-one-third">
    <div class="box is-fullwidth has-background-info-dark">
      <article class="box">
        <%= form_tag boardgames_path, :method => "get" do %>
          <div class="field has-text-centered">
            <%= label_tag :name, "Search Boardgames", class: "label  has-text-centered has-text-danger-dark"%>
            <%= text_field_tag :name, "", class: "input" %>
          </div>
          <div class="action">
            <%= submit_tag "Search", name: nil, class: "button is-rounded is-small is-fullwidth has-background-primary-light" %>
          <% end %>
        </div>
      </article>

      <article class="box">
        <%= form_for @category do |f| %>
        <div class="field has-text-centered">
          <%= f.label "Browse by Category", class: "label has-text-danger-dark" %>
          <%= f.collection_select :id, @categories, :id, :name, controls: "dropdown-menu" %>
        </div>
        <div class="action">
          <%= f.submit 'Browse', name: nil, class: "button is-rounded is-small is-fullwidth has-background-primary-light" %>
        <% end %>
        </div>
      </article>
    </div>

    <div class="action has-text-centered">
      <%= link_to "Highest User Rated Games", highest_rated_path, class: "button is-rounded has-background-info-dark has-text-warning" %>
    </div>
  </div>
</div>

<br>
<br>

<div class="box has-background-success-light	">
  <div class="level">
    <p class="level-item has-text-centered has-text-warning has-text-weight-bold">
      Play?
    </p>
    <p class="level-item has-text-centered has-text-danger has-text-weight-bold">
      Cooperative?
    </p>
    <p class="level-item has-text-weight-bold has-text-grey-light is-size-2 has-text-centered ">
      Try These Random Games
    </p>
    <p class="level-item has-text-centered has-text-primary has-text-weight-bold">
      Competative?
    </p>
    <p class="level-item has-text-centered has-text-info has-text-weight-bold">
      Contactless?
    </p>
  </div>
</div>


<div class="tile is-ancestor">
  <div class="tile is-vertical is-8">
    <div class="tile">
      <div class="tile is-parent is-vertical">
        <article class="tile is-child notification is-primary">
          <% if @boardgames[0].small_image %>
            <%= link_to (image_tag @boardgames[0].small_image, alt: "boardgame"), boardgame_path(@boardgames[0]) %>
          <% end %>
          <% if !@boardgames[0].categories.empty? %>
            <li>Category
            <% @boardgames[0].categories.each do |e| %>
              <% if @boardgames[0].categories.count > 1 %>
                |
              <% end %>
              <%= link_to e.name, category_path(e) %>
            <% end %>
          <% end %>
          <p class="title"><%= @boardgames[0].name %></p>
          <p class="subtitle"><%== @boardgames[0].description.first(300)... %></p>
        </article>

        <article class="tile is-child notification is-warning">
          <% if @boardgames[1].small_image %>
            <%= link_to (image_tag @boardgames[1].small_image, alt: "boardgame"), boardgame_path(@boardgames[1]) %>
          <% end %>
          <% if !@boardgames[1].categories.empty? %>
            <li>Category
            <% @boardgames[1].categories.each do |e| %>
              <% if @boardgames[1].categories.count > 1 %>
                |
              <% end %>
              <%= link_to e.name, category_path(e) %>
            <% end %>
          <% end %>
          <p class="title"><%= @boardgames[1].name %></p>
          <p class="subtitle"><%== @boardgames[1].description.first(200)... %></p>
        </article>
      </div>

      <div class="tile is-parent">
        <article class="tile is-child notification is-info">
          <% if @boardgames[2].medium_image %>
            <%= link_to (image_tag @boardgames[2].medium_image, alt: "boardgame"), boardgame_path(@boardgames[2]) %>
          <% end %>
          <% if !@boardgames[2].categories.empty? %>
            <li>Category
            <% @boardgames[2].categories.each do |e| %>
              <% if @boardgames[2].categories.count > 1 %>
                |
              <% end %>
              <%= link_to e.name, category_path(e) %>
            <% end %>
          <% end %>
          <p class="title"><%= @boardgames[2].name %></p>
          <p class="subtitle"><%== @boardgames[2].description.first(500)... %></p>
        </article>
        <figure class="image is-4by3">
          <img src="https://bulma.io/images/placeholders/640x480.png">
        </figure>
      </div>
    </div>

    <div class="tile is-parent">
      <article class="tile is-child notification is-danger">
        <% if @boardgames[4].small_image %>
          <%= link_to (image_tag @boardgames[4].small_image, alt: "boardgame"), boardgame_path(@boardgames[4]) %>
        <% end %>
        <% if !@boardgames[4].categories.empty? %>
          <p>
          <li>Category
          <% @boardgames[4].categories.each do |e| %>
            <% if @boardgames[4].categories.count > 1 %>
              |
            <% end %>
            <%= link_to e.name, category_path(e) %>
          <% end %>
        <% end %>
        </p>
        <p class="title"><%= @boardgames[4].name %></p>
        <p class="subtitle"><%== @boardgames[4].description.first(700)... %></p>
      </article>
    </div>
  </div>

  <div class="tile is-parent">
    <article class="tile is-child notification is-success">
      <div class="content">
        <% if @boardgames[5].medium_image %>
          <%= link_to (image_tag @boardgames[5].medium_image, alt: "boardgame"), boardgame_path(@boardgames[5]) %>
        <% end %>
        <% if !@boardgames[5].categories.empty? %>
          <li>Category
          <% @boardgames[5].categories.each do |e| %>
            <% if @boardgames[5].categories.count > 1 %>
              |
            <% end %>
            <%= link_to e.name, category_path(e) %>
          <% end %>
        <% end %>
        <p class="title"> <%= @boardgames[5].name %></p>
        <p class="subtitle"><%== @boardgames[5].description.first(1000)... %></p>
      </div>
    </article>
  </div>
</div>

<div class="action">
  <%= link_to "Submit a Boardgame", new_boardgame_path, class: "input button is-link is-centered" %>
</div>
