<div class="back_img">
  <div class="columns is-centered mt-2">
    <div class="column is-one-third">
      <div class="box">
        <div class="box is-fullwidth has-background-info-dark">
          <article class="box">
            <h1 class="is-size-2 has-text-weight-bold mb-3 has-text-centered"> Log-in</h1>
          </article>
        </div>
        <% if flash[:error] %>
          <p style="color: red"><%= flash[:error] %></p><br><br>
        <% end %>
        <%= form_for @user, url: login_path, method: :post do |f| %>
          <div class="field">
            <%= f.label "Username", class: "label" %>
            <%= f.text_field :username, class: "input"%>
          </div>
          <div class="field">
            <%= f.label "Password", class: "label" %>
            <%= f.password_field :password, class: "input " %>
          </div>
          <div class="action has-text-centered">
            <%= submit_tag "Log in", class: "button has-background-info-light" %>
            <br>
            <br>
            <%= link_to "Sign up", new_user_path, class: "button has-background-info-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
